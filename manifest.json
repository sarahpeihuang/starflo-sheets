{
  "manifest_version": 3,
  "name": "StarFlo",
  "version": "1.14",
  "description": "Pin and access your favorite Google Sheets functions instantly.",
  "permissions": ["storage", "scripting", "activeTab", "contextMenus"],
  "host_permissions": ["https://docs.google.com/spreadsheets/*"],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://docs.google.com/spreadsheets/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "star-default.svg",
        "star-hover.svg",
        "star-drag.svg",
        "gripper.svg",
        "A.svg",
        "fill.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}